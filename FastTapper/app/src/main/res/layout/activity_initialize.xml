<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#431587"
    android:orientation="vertical"
    tools:context="io.github.crypticguy.fasttapper.InitializeActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Initializing The Game"
        android:textSize="30sp"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/player1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffaf00"
            android:textColor="#000"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:hint="Name of Player 1"/>

        <EditText
            android:id="@+id/player2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffaf00"
            android:textColor="#000"
            android:layout_marginBottom="10sp"
            android:padding="10sp"
            android:hint="Name of Player 2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="initializeGame"
            android:text="Start Game"/>
    </LinearLayout>

</LinearLayout>
